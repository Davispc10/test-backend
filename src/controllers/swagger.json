{
	"openapi": "3.0.0",
	"info": {
			"title": "Pokemongo API",
			"description": "Ã‰ uma API parar realizar consultas de pokemons",
			"termsOfService": "https://storagefest.s3-us-west-2.amazonaws.com/files/em-construcao_krHMS.png",
			"contact": {
				"email": "pokemons@mail.com"
			},
			"version": "1.0.0"
	},
	"servers": [
		{
			"url": "http://localhost:3000/v1",
			"description": "API DEV"
		}
	],
	"paths": {
		"/pokemons": {
			"get": {
				"summary": "Retorna pokemons",
				"description": "Retorna todos os pokemons cadastrados",
				"tags": ["Pokemons"],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"aplication/json": {
								"schema": {
									"type": "object",
									"properties": {
										"pokemons": {
											"type": "array",
											"items": {
												"$ref": "#/components/schemas/Pokemon"
											}
										}
									}
								}
							}
						}
					},
					"404": {
						"description": "Nenhum pokemon cadastrado"
					}
				}
			}
		},
		"/{name}": {
			"get": {
				"summary": "Busca pokemon",
				"description": "Busca pokemon pelo nome",
				"tags": ["Pokemons"],
				"parameters": [
					{
						"name": "name",
						"in": "path",
						"description": "Nome do pokemon",
						"required": true
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
								"aplication/json": {
									"schema": {
										"type": "object",
										"properties": {
											"pokemon": {
											"type": "object",
											"$ref": "#/components/schemas/PokemonRaw"
										}
									}
								}
							}
						}
					},
					"404": {
						"description": "Nenhum pokemon encontrado"
					}
				}
			}
		},
		"/page": {
			"post": {
				"summary": "Busca paginada",
				"description": "Busca de pokemon paginada",
				"tags": ["Pokemons"],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"page": {
										"type": "number"
									},
									"pageSize": {
										"type": "number"
									}
								}
							},
							"example": {
								"page": 1,
								"pageSize": 2
							}
						}
					}
				},
				"responses": {
					"200": {
							"description": "OK",
							"content": {
								"aplication/json": {
									"schema": {
										"type": "object",
										"properties": {
											"pokemons": {
												"type": "array",
												"items": {
													"$ref": "#/components/schemas/PokemonRaw"
												}
										}
									}
								}
							}
						}
					},
					"404": {
						"description": "Nenhum pokemon encontrado"
					}
				}
			}
		}
	},
