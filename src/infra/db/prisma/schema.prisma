// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id                       Int                    @id @default(autoincrement())
  pokedexNumber            Int
  pokemonEvolutionInfo     PokemonEvolutionInfo   @relation(fields: [pokemonEvolutionInfoId], references: [id])
  pokemonCharacteristics   PokemonCharacteristics @relation(fields: [pokemonCharacteristicsId], references: [id])
  powerStatus              PowerStatus            @relation(fields: [powerStatusId], references: [id])
  pokemonEvolutionInfoId   Int
  pokemonCharacteristicsId Int
  powerStatusId            Int
  name                     String
  type                     Type[]
  weather                  Weather[]
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String
}

model Type {
  id      Int       @id @default(autoincrement())
  name    String
  Pokemon Pokemon[]
}

model Weather {
  id      Int       @id @default(autoincrement())
  name    String
  pokemon Pokemon[]
}

model PowerStatus {
  id        Int       @id @default(autoincrement())
  atk       Int
  def       Int
  sta       Int
  statTotal Int
  cp_100_40 Int
  cp_100_39 Int
  Pokemon   Pokemon[]
}

model PokemonCharacteristics {
  id           Int       @id @default(autoincrement())
  legendary    Boolean
  aquireable   Int
  spawns       Boolean
  regional     Boolean
  raidable     Int
  hatchable    Int
  shiny        Boolean
  nest         Boolean
  new          Boolean
  NotGettable  Boolean
  futureEvolve Boolean
  crossGen     Boolean
  generation   Int
  Pokemon      Pokemon[]
}

model PokemonEvolutionInfo {
  id             Int       @id @default(autoincrement())
  evolutionStage Int
  envolved       Boolean
  familyId       Int
  Pokemon        Pokemon[]
}
