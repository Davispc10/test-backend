// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id                     Int                    @id @default(autoincrement())
  pokedexNumber          Int
  PokemonTypePokemon     PokemonTypePokemon[]
  PokemonWeather         PokemonWeather[]
  pokemonEvolutionInfo   PokemonEvolutionInfo   @relation(fields: [pokemonEvolutionInfoId], references: [id])
  pokemonCharacteristics PokemonCharacteristics @relation(fields: [pokemonCharacteristicsId], references: [id])
  powerStatus            PowerStatus            @relation(fields: [powerStatusId], references: [id])

  pokemonEvolutionInfoId   Int
  pokemonCharacteristicsId Int
  powerStatusId            Int
}

model TypePokemon {
  id                 Int                  @id @default(autoincrement())
  name               String
  PokemonTypePokemon PokemonTypePokemon[]
}

model PokemonTypePokemon {
  id            Int         @id @default(autoincrement())
  pokemonId     Int
  typePokemonId Int
  pokemon       Pokemon     @relation(fields: [pokemonId], references: [id])
  typePokemon   TypePokemon @relation(fields: [typePokemonId], references: [id])
}

model Weather {
  id             Int              @id @default(autoincrement())
  name           String
  PokemonWeather PokemonWeather[]
}

model PokemonWeather {
  id        Int     @id @default(autoincrement())
  pokemonId Int
  weatherId Int
  pokemon   Pokemon @relation(fields: [pokemonId], references: [id])
  weather   Weather @relation(fields: [weatherId], references: [id])
}

model PowerStatus {
  id        Int       @id @default(autoincrement())
  atk       Int
  def       Int
  sta       Int
  statTotal Int
  cp_100_40 Int
  cp_100_39 Int
  Pokemon   Pokemon[]
}

model PokemonCharacteristics {
  id           Int       @id @default(autoincrement())
  legendary    Boolean
  aquireable   Int
  spawns       Boolean
  regional     Boolean
  raidable     Int
  hatchable    Int
  shiny        Boolean
  nest         Boolean
  new          Boolean
  NotGettable  Boolean
  futureEvolve Boolean
  crossGen     Boolean
  generation   Int
  Pokemon      Pokemon[]
}

model PokemonEvolutionInfo {
  id             Int       @id @default(autoincrement())
  evolutionStage Int
  envolved       Boolean
  familyId       Int
  Pokemon        Pokemon[]
}
